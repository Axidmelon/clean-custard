# Custard MongoDB Agent Environment Configuration

# Backend WebSocket connection
BACKEND_WEBSOCKET_URI=wss://your-backend.com/api/v1/connections/ws/{agent_id}
CONNECTION_ID=your-connection-uuid-here
AGENT_ID=your-agent-id-here

# MongoDB connection
MONGODB_CONNECTION_STRING=mongodb://username:password@host:port/database
MONGODB_DATABASE_NAME=your_database_name

# Optional: Collection filtering (comma-separated)
# MONGODB_COLLECTION_FILTER=users,orders,products

# Optional: Logging level
# LOG_LEVEL=INFO
