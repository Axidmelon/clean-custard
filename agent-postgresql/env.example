# Agent PostgreSQL Environment Configuration
# Copy this file to .env and update with your actual values

# Backend WebSocket Connection
# Replace {agent_id} with your actual agent ID
BACKEND_WEBSOCKET_URI=ws://localhost:8000/api/v1/connections/ws/{agent_id}

# Agent Configuration
CONNECTION_ID=agent-postgresql-001
AGENT_ID=agent-postgresql-001

# Database Connection (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=require

# Schema Discovery Configuration (Optional)
SCHEMA_NAME=public
TABLE_FILTER=

# Security Configuration (Optional)
# Comma-separated list of dangerous SQL keywords to block
DANGEROUS_KEYWORDS=drop,delete,insert,update,alter,create,truncate,grant,revoke,exec,execute,sp_,xp_,--,/*,*/

# Logging Configuration (Optional)
LOG_LEVEL=INFO
