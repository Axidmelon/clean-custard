# Production Environment Configuration Template
# Copy this file to .env.production and update with your production values

# Backend WebSocket Connection (Production)
# Replace {agent_id} with your actual agent ID
BACKEND_WEBSOCKET_URI=wss://your-backend-domain.com/api/v1/connections/ws/{agent_id}

# Agent Configuration
CONNECTION_ID=agent-postgresql-prod-001
AGENT_ID=agent-postgresql-prod-001

# Database Connection (Production PostgreSQL)
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_NAME=your_production_db
DB_USER=your_production_user
DB_PASSWORD=your_secure_production_password
DB_SSLMODE=require

# Schema Discovery Configuration
SCHEMA_NAME=public
TABLE_FILTER=

# Security Configuration
# Comma-separated list of dangerous SQL keywords to block
DANGEROUS_KEYWORDS=drop,delete,insert,update,alter,create,truncate,grant,revoke,exec,execute,sp_,xp_,--,/*,*/

# Logging Configuration
LOG_LEVEL=INFO

# Production-specific settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
