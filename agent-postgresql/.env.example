# Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# BACKEND CONNECTION (REQUIRED)
# =============================================================================

# Backend WebSocket URI
BACKEND_WEBSOCKET_URI=ws://localhost:8000/api/v1/connections/ws/agent-007

# Connection ID for this agent
CONNECTION_ID=agent-007

# =============================================================================
# DATABASE CONNECTION (REQUIRED)
# =============================================================================

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database name
DB_NAME=postgres

# Database username
DB_USER=postgres

# Database password
DB_PASSWORD=your-database-password

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent name (for identification)
AGENT_NAME=custard-agent-007

# Agent version
AGENT_VERSION=1.0.0

# Maximum query execution time (seconds)
MAX_QUERY_TIMEOUT=300

# Query result limit
MAX_RESULT_ROWS=10000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable query validation
ENABLE_QUERY_VALIDATION=true

# Allowed query types (comma-separated)
ALLOWED_QUERY_TYPES=SELECT

# Blocked keywords (comma-separated)
BLOCKED_KEYWORDS=DROP,DELETE,INSERT,UPDATE,ALTER,CREATE,TRUNCATE,GRANT,REVOKE

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Connection pool size
DB_POOL_SIZE=5

# Connection timeout (seconds)
DB_CONNECTION_TIMEOUT=30

# Query cache TTL (seconds)
QUERY_CACHE_TTL=3600

# =============================================================================
# MONITORING
# =============================================================================

# Enable health checks
HEALTH_CHECK_ENABLED=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=60

# Metrics collection
METRICS_ENABLED=true
